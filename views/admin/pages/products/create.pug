extends ../../layouts/default.pug

block  main
    h1(class="mb-4") Add new product

    form(
        action= `${prefixAdmin}/products/create`
        id= "form-create-product"
        method= "POST"
    )
        div(class="form-group")
            label(for="title")  Title
            input(
                type="text"
                class="form-control"
                id="title"
                name="title"
                required
            )
        div(class="form-group")
            label(for="desc")  Description
            textarea(
                class="form-control"
                id="desc"
                name="description"
                rows="5"
            )
        div(class="form-group")
            label(for="price") Price
            input(
                type="number"
                class="form-control"
                id="price"
                name="price"
                value="0"
                min="0"

            )
        div(class="form-group")
            label(for="discount") Discount Percentage
            input(
                type="number"
                class="form-control"
                id="discount"
                name="discountPercentage"
                value="0"
                min="0"
            )
        div(class="form-group")
            label(for="discount") Stock
            input(
                type="number"
                class="form-control"
                id="stock"
                name="stock"
                value="0"
                min="0"
            )
        div(class="form-group")
            label(for="thumbnail") Thumbnail
            input(
                type="text"
                class="form-control"
                id="thumbnail"
                name="thumbnail"        
            )
        div(class="form-group")
            label(for="position") Position
            input(
                type="number"
                class="form-control"
                id="position"
                name="position"
                placeholder="auto increase"     
                min="1"   
            )    
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="from-check-input"
                id="statusAvailable"
                name="status"
                value="available"
                checked
            )    
            label(for="statusAvailable" class="form-check-label") Available
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="from-check-input"
                id="statusUnavailable"
                name="status"
                value="unavailable"
                checked
            )    
            label(for="statusUnavailable" class="form-check-label") Unavailable

        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Create

    script(src="/admin/js/product.js")

