extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/select-tree.pug

block main
    if(role.permissions.includes("products-category_edit"))  
        h1(class="mb-4") Edit product category

        +alert-error(5000)
        +alert-success(5000)
        
        form(
            action=`${prefixAdmin}/products-category/edit/${data.id}?_method=PATCH`
            method="POST"
            enctype="multipart/form-data"
        )
            div(class="form-group")
                label(for="title") Title
                input(
                    type="text"
                    class="form-control"
                    id="title"
                    name="title"
                    required
                    value=data.title
                ) 
            div(class="form-group")
                label(for="parent_id")  Parent category
                select(
                    name="parent_id"
                    id="parent_id"
                    class="form-control"
                )
                    option(value="") -- Select parent category -- 
                    if (records)
                        +select-tree(records,1,data.parent_id)
            div(class="form-group")
                label(for="desc")  Description
                textarea(
                    class="form-control textarea-mce"
                    id="desc"
                    name="description"
                    rows="5"
                ) #{data.description}
            div(
                class="form-group thumbnail-container"
                upload-image
            )
                label(for="thumbnail") Thumbnail
                input(
                    type="file"
                    class="form-control-file"
                    id="thumbnail"
                    name="thumbnail"    
                    accept="image/*" 
                    upload-image-input   
                )
                img(
                    src=data.thumbnail
                    upload-image-preview
                    class="image-preview"
                )
            div(class="form-group")
                label(for="position") Position
                input(
                    type="number"
                    class="form-control"
                    id="position"
                    name="position"
                    placeholder="auto increase"     
                    min="1"   
                    value=data.position
                )    
            div(class="form-group form-check form-check-inline")
                input(
                    type="radio"
                    class="from-check-input"
                    id="statusAvailable"
                    name="status"
                    value="available"
                    checked=(data.status=="available"  ? true : false)
                )    
                label(for="statusAvailable" class="form-check-label") Available
            div(class="form-group form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input"
                    id="statusUnavailable"
                    name="status"
                    value="unavailable"
                    checked=(data.status =="unavailable"  ? true : false)
                )    
                label(for="statusUnavailable" class="form-check-label") Unavailable

            div(class="form-group")
                button(
                    type="submit"
                    class="btn btn-primary"
                ) Update     