extends ../../layouts/default.pug

block main 
    h1(class="mb-4") Thêm mới nhóm quyền

    form(
        action=`${prefixAdmin}/roles/create`
        method="POST"
    )
        div(class="form-group")
            label(for="title") Title
            input(
                type="text"
                class="form-control"
                id="title"
                name="title"
                required
            )
        div(class="form-group")
            label(for="desc") Description
            input(
                type="text"
                class="form-control"
                id="desc"
                name="description"
            )
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Add new