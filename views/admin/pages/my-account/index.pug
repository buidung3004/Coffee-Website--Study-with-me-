extends ../../layouts/default.pug

block main
    h1(class="mb-4") Thông tin cá nhân

    if(user.avatar)
        img(src=user.avatar width="150px" class="mb-3")
    else
        img(src="/admin/images/avatar.png" width="150px" class="mb-3")

    if(user.fullName)
        p Full Name: <b>  #{user.fullName} </b>

    if(user.email)
        p Email: <b>  #{user.email} </b>

    if(user.phone)
        p Phone: <b>  #{user.phone} </b>

    p 
        span Status: 
        span 
            <b> #{user.status === "active" ? "active": "inactive"} </b>

    if (role.title)
        p Role: <b> #{role.title} </b>

    a(
        href=`${prefixAdmin}/my-account/edit`
        class="btn btn-primary"
    ) Chỉnh sửa thông tin